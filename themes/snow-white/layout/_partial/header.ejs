<header class="border-b border-solid border-gray-100">
    <div class="max-w-3xl mx-auto">
        <div class="py-4 border-b border-slate-900/10 lg:border-0 dark:border-slate-300/10 mx-0">
            <div class="relative sm:flex sm:items-center">
                <div class="flex-none sm:flex-initial">
                    <a class="flex-none overflow-hidden md:w-auto" href="<%= url_for('.') %>">
                        <span class=""><%= config.title %></span>
                    </a>

                    <% if(config.subtitle){ %>
                        <span class="hidden md:inline-block text-xs text-gray-500"><i> - <%= config.subtitle %> </i></span>
                    <% } %>
                </div>

                <%- partial('nav', null, {cache: false}) %>
            </div>
        </div>
    </div>
</header>