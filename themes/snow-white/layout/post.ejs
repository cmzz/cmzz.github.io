---
layout: layout
---

<article class="max-w-3xl mx-auto py-10 typo">
    <div>
        <h1 style="margin-top: 0;">
            <%- page.title.replace(/[<>&"]/g,function(c){
                return {'<':'&lt;','>':'&gt;','&':'&amp;','"':'&quot;'}[c];
            }) %>
        </h1>

        <div>
            <span>
                <time datetime="<%= page.date %>"><%- page.date.format(config.date_format) %></time>
            </span>

            <% if (page.tags.length){ %>
            <div class="mt-2">
                <span><%= __('post.tags') %>ï¼š</span>
                <% page.tags.forEach(function(tag, i){ %>
                    <a class="text-gray-500 no-underline" href="<%= config.root %>tags/#<%= tag.name %>" title="<%= tag.name %>"><%= tag.name %></a>
                    <% if (i < page.tags.length - 1) { %>
                    <span>,</span>
                    <% } %>
                <% }) %>
            </div>
            <% } %>
        </div>

        <section class="pt-10 <% if(config.post_style && !config.post_style.indent) {%>no-indent<% } %>">
            <aside>
                <%- partial('_partial/toc', {item: page, index: false}) %>
            </aside>

            <section>
                <%- page.content %>
            </section>
        </section>
    </div>
</article>