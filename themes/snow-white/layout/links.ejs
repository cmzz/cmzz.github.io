---
layout: layout
---

<% if (page.content) { %>
<section class="max-w-4xl mx-auto pt-10 typo">
    <div class="">
        <%- page.content %>
    </div>
</section>
<% } %>

<% if (page.links.length > 0) { %>
<section class="max-w-4xl mx-auto py-10">
    <div class="archive-container">
        <% page.links.map(function(item, i){ %>
            <div class="<%= i > 0 ? 'mt-10' : '' %>">
                <div class="text-gray-500">
                    <%= item.group %>
                </div>

                <% if (item.description) { %>
                    <div class="pt-3 pb-6 text-sm text-gray-500">
                        <%- item.description %>
                    </div>
                <% } %>

                <% item.links.map(function(link){ %>
                    <div>
                        <ul class="pl-10 list-disc">
                            <li>
                                <%- link_to(link.url, link.name, {external: true}) %>
                            </li>
                        </ul>
                    </div>
                <% }) %>
            </div>
        <% }) %>
    </div>
</section>
<% } else if (page.content) { %>
    <div class="h-10"></div>
<% } %>